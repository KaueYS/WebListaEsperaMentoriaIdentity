@model IEnumerable<WebListaEsperaMentoriaIdentity.Models.ProfissionalModel>



<h4>Profissionais cadastrados</h4>

<p>
    <a asp-action="Create">Cadastrar Novo Profissional</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Especialidade)
            </th>
            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Especialidade.Nome)
                </td>
               
                <td>
                    <a asp-action="ListaPacientesProfissional" asp-route-id="@item.Id">Pacientes do Profissional</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
