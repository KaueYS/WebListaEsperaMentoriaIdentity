@model WebListaEsperaMentoriaIdentity.ViewModels.ListaPacientesViewModel

@{
    ViewData["Title"] = $"TEM CERTEZA QUE DESEJA DELETAR O PACIENTE {@Model.Nome}?";
}
<h5>@ViewData["Title"]</h5>
<hr />

@{
    if (TempData["ErroDeletar"] != null)
    {
        <div class="alert alert-primary" role="alert">
            @TempData["ErroDeletar"]
        </div>
    }
    else if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-primary" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
}


<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
       
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
